</section>


<script>
    // Core de Swiper y estilos
    import Swiper2 from 'swiper';
    import { Autoplay} from "swiper/modules";
 
  
    // Configurar Swiper
    const mySwiper2 = new Swiper2(".mySwiper2", {
        modules: [  Autoplay ],
        slidesPerView: 5,
        spaceBetween: 50,
        autoplay: {
          delay: 3000
        },
        breakpoints: {
            640: {
              slidesPerView: 2,
              spaceBetween: 20,
            },
            768: {
              slidesPerView: 4,
              spaceBetween: 40,
            },
            1024: {
              slidesPerView: 5,
              spaceBetween: 50,
            },
          },
    });
  </script>

<style>
    .swiper2 {
    width: 100%;
    height: 100%;
}
.swiper-slide2 {
