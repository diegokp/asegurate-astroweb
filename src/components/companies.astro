              <div class="swiper-slide"><img src="images/company/fiatc.webp" alt="Fiatc Logo"></div>
              <div class="swiper-slide"><img src="images/company/arag.webp" alt="Arag Logo"></div>
              <div class="swiper-slide"><img src="images/company/previsora.webp" alt="Previsora Logo"></div>
            </div>
          </div>
    </aside>
    <Link
    href="/asistencia/"
    className="botonGenerico"
    >Asistencia 24hs
    </Link>
</section>


<script>
    // Core de Swiper y estilos
    import Swiper from 'swiper';
    import 'swiper/css';
    import { Autoplay } from "swiper/modules";


    // Configurar Swiper
    const swiper2 = new Swiper(".swiper2", {
          modules: [ Autoplay ],
          slidesPerView: 1,
          spaceBetween: 10,
          autoplay: {
            delay: 3000,
            disableOnInteraction: false,
          },
          breakpoints: {
            640: {
              slidesPerView: 2,
              spaceBetween: 20,
            },
            768: {
              slidesPerView: 4,
              spaceBetween: 40,
            },
            1024: {
              slidesPerView: 5,
              spaceBetween: 50,
            },
          },
        });
  </script>

